<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/initialpage"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/treasure"
        android:layout_width="450dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/opos" />

    <Button
        android:id="@+id/newgame"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/treasure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_layout"
        android:text="New Game"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/lastgame"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/newgame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_layout"
        android:text="Last Game"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rank"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/lastgame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_layout"
        android:text="Rank"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/about"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/rank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_layout"
        android:text="About"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/exit"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_layout"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold" />

</RelativeLayout>
